#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $DIR/..

CONFIG_FILE="./conf/$1.conf"
if [ -f "$CONFIG_FILE" ]; then
  shift
  CHAIN_PARAM="-Dconfig.file=$CONFIG_FILE"
elif [ -z "$1" ]; then
  CHAIN_PARAM="-Dconfig.file=./conf/etc.conf"
fi

./bin/mantis ${CHAIN_PARAM:+"$CHAIN_PARAM"} "$@"
